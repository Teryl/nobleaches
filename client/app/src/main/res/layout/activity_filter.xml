<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/overlayreserve">



    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/buttonContainer"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/rounded_corners_bg"
        >
        <include
            layout="@layout/close_button"
            android:id="@+id/filter_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blocks"
                android:textSize="30sp"
                android:layout_marginTop="20dp"
                >

            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray">

            </View>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_block_group"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:singleSelection="true"
                android:layout_marginStart="10dp"
                >

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_block_55"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:text="Block 55"
                    android:textSize="25sp"
                    android:background="@drawable/filter_chip_bg_lighter"
                    android:textColor="@color/white"
                    />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_block_57"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:text="Block 57"
                    android:textSize="25sp"
                    android:background="@drawable/filter_chip_bg_lighter"
                    android:textColor="@color/white"
                    />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_block_59"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:text="Block 59"
                    android:textSize="25sp"
                    android:background="@drawable/filter_chip_bg_lighter"
                    android:textColor="@color/white"
                    />

            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Machines"
                android:textSize="30sp"
                >

            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray">

            </View>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:singleSelection="true"
                android:layout_marginStart="10dp"
                >

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_washer"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Washer"
                    android:textSize="25sp"
                    android:background="@drawable/filter_chip_bg_lighter"
                    android:textColor="@color/white"
                    />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_dryer"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Dryer"
                    android:textSize="25sp"
                    android:background="@drawable/filter_chip_bg_lighter"
                    android:textColor="@color/white"
                    />

            </com.google.android.material.chip.ChipGroup>

            <Button
                android:id="@+id/Find_Filter_Button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Find"
                android:layout_marginTop="80dp"
                android:layout_gravity="center">

            </Button>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>