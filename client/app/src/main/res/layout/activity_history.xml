<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/back_button"
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintHorizontal_bias="0"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text ="@string/History"
            android:textSize="50sp"
            android:textColor="@color/black"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        >
        <!-- Layout content goes here -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/Machine1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- Add your views here -->
                <Button
                    android:id="@+id/Washer1"
                    android:layout_width="150dp"
                    android:layout_height="220dp"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/laundry"
                    android:text="Washer 1"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/myTextView"
                    android:layout_width="250dp"
                    android:layout_height="220dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="-25dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="Date: 17/2/24\nTime: 1400 - 1500"
                    android:textColor="@android:color/black"
                    android:textSize="25sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- Add your views here -->
                <Button
                    android:id="@+id/Washer2"
                    android:layout_width="150dp"
                    android:layout_height="220dp"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/laundry"
                    android:text="Washer 2"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/myTextView"
                    android:layout_width="250dp"
                    android:layout_height="220dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="-25dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="Date: 17/2/24\nTime: 1400 - 1500"
                    android:textColor="@android:color/black"
                    android:textSize="25sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- Add your views here -->
                <Button
                    android:id="@+id/Washer3"
                    android:layout_width="150dp"
                    android:layout_height="220dp"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/laundry"
                    android:text="Washer 3"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/myTextView"
                    android:layout_width="250dp"
                    android:layout_height="220dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="-25dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="Date: 17/2/24\nTime: 1400 - 1500"
                    android:textColor="@android:color/black"
                    android:textSize="25sp" />
            </LinearLayout>
        </LinearLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>